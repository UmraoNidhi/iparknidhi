<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="130dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/shapelogout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/Card_similar"
        android:layout_width="148dp"
        android:layout_height="127dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="6dp"
        android:padding="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:id="@+id/Linear_Similar"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/Image_repair"
                android:padding="1dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:fontFamily="@font/mulibold"
                android:id="@+id/Text_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/Text_shopAddress"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="@font/mulilight"
                android:padding="4dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    


</RelativeLayout>