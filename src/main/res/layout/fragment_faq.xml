<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglight"
    tools:context=".Fragment.FAQFragment">
    <RelativeLayout
        android:id="@+id/Relative_FAQ"
        android:layout_width="match_parent"
        android:background="@drawable/newfaq"
        android:layout_height="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:gravity="center"
            android:lines="2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="How can we \nhelp you?"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/Recycler_FAQ"
        android:layout_below="@id/Relative_FAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>