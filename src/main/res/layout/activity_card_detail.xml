<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CardDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="3"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/Image_back"
        android:layout_gravity="center"
        android:src="@drawable/backwhitenew"
        android:layout_width="30dp"
        android:padding="5dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_gravity="center"
        android:layout_weight="2.9"
        android:text=" Details"
        android:gravity="left"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/mulibold"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/Linear_pay"
        android:weightSum="3"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="Pay"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/nigeria"
            android:padding="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/Text_Price"
            android:layout_weight="1.9"
            android:text="200"
            android:gravity="left"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/Linear_pay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:weightSum="2"
        android:id="@+id/Card_Detail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/Edit_BankName"
            android:text="Name :"
            android:fontFamily="@font/mulilight"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Edit_CardNo"
            android:text="Nidhi"
            android:layout_weight="1"
            android:fontFamily="@font/mulilight"
            android:layout_marginStart="5dp"
            android:layout_margin="5dp"
            android:maxLength="16"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/Card_Detail"
        android:weightSum="2"
        android:id="@+id/USer_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/User_Phone"
            android:text="Phone No :"
            android:fontFamily="@font/mulilight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/PhoneNo"
            android:text="8909098098"
            android:layout_weight="1"
            android:fontFamily="@font/mulilight"
            android:layout_marginStart="5dp"
            android:maxLength="16"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/USer_phone"
        android:weightSum="2"
        android:id="@+id/USer_Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/User_email"
            android:text="Email :"
            android:fontFamily="@font/mulilight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Email"
            android:text=""
            android:layout_weight="1"
            android:fontFamily="@font/mulilight"
            android:layout_marginStart="5dp"
            android:maxLength="16"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/USer_Email"
        android:weightSum="2"
        android:id="@+id/Total_amount"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/amount"
            android:text="Valid For :"
            android:fontFamily="@font/mulilight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Price"
            android:text="1 month"
            android:layout_weight="1"
            android:fontFamily="@font/mulilight"
            android:layout_marginStart="5dp"
            android:maxLength="16"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


        <TextView
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/mulibold"
            android:textSize="18sp"
            android:visibility="gone"
            android:text="*You can also make payment via loading credit on your mobile phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <Button
        android:id="@+id/Button_pay"
        android:layout_margin="20dp"
        android:background="@drawable/shapelogout"
        android:text="Pay Now"
        android:fontFamily="@font/mulibold"
        android:layout_below="@id/Total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </LinearLayout>




</RelativeLayout>