<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/Card_home"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:id="@+id/Linear_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/Image_home"
                android:layout_width="70dp"
                android:padding="5dp"
                android:layout_height="70dp" />
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:weightSum="4"
                android:orientation="vertical"
                android:id="@+id/Linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mulibold"
                    android:textColor="@color/colorBlack"
                    android:text="Carmax Autocare Center"
                    android:id="@+id/Text1"
                    android:textSize="16sp"
                    android:inputType="textNoSuggestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:id="@+id/Text2"
                    android:ellipsize="end"
                    android:padding="2dp"
                    android:layout_marginRight="10dp"
                    android:ems="15"
                    android:fontFamily="@font/mulilight"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/linear_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Rating_one"
                        android:padding="3dp"
                        android:src="@drawable/rating_fill"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Rating_two"
                        android:padding="3dp"
                        android:src="@drawable/rating_fill"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Rating_three"
                        android:padding="3dp"
                        android:src="@drawable/rating_fill"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Rating_four"
                        android:padding="3dp"
                        android:src="@drawable/rating_fill"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Rating_five"
                        android:padding="3dp"
                        android:src="@drawable/rating_fill"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:text="5 miles"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/Review"
                            android:text="Reviews"
                            android:fontFamily="@font/mulilight"
                            android:textColor="@color/colorBlack"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/mobile"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:text=""
                        android:maxLength="10"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/mulilight"
                        android:id="@+id/Text_mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>