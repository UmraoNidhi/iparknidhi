<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/Card_carList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        
        <LinearLayout
            android:clickable="false"
            android:id="@+id/Linear_car"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="10dp"
                android:src="@drawable/usercar"
                android:id="@+id/Image_car"
                android:padding="5dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_width="60dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_weight="1.6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/mulilight"
                    android:text="Car Type :"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/mulilight"
                    android:text="Fuel Type :"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/mulilight"
                    android:text="Registration Year :"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:text="Model No"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/mulibold"
                    android:id="@+id/Text_car"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/mulibold"
                    android:id="@+id/Text_fuel"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/mulibold"
                    android:id="@+id/Text_Year"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/mulibold"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/Text_Model"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <ImageView
                android:id="@+id/Delete_Car"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:src="@drawable/bin"
                android:padding="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>