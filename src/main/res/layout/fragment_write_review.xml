<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WriteReviewFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/Edit_Linear"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/Image_user"
                android:layout_marginLeft="8dp"
                android:background="@drawable/man"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.6"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/mulibold"
                        android:id="@+id/Text_name"
                        android:text="Geeta"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/Update_Review"
                        android:layout_weight=".5"
                        android:padding="0dp"
                        android:src="@drawable/editdetails"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/User_review"
                    android:padding="5dp"
                    android:layout_marginLeft="8dp"
                    android:text="Service provider was very good."
                    android:layout_weight="1"
                    android:fontFamily="@font/mulilight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_below="@id/Text_review"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal"
                        android:id="@+id/Text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/Write_rating1"
                            android:padding="3dp"
                            android:src="@drawable/rating_fill"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/Write_rating2"
                            android:padding="3dp"
                            android:src="@drawable/rating_fill"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/Write_rating3"
                            android:padding="3dp"
                            android:src="@drawable/rating_fill"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/Write_rating4"
                            android:padding="3dp"
                            android:src="@drawable/rating_fill"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/Write_rating5"
                            android:padding="3dp"
                            android:src="@drawable/rating_fill"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Review_data"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:text="07/08/2019"
                        android:fontFamily="@font/mulilight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:background="@drawable/shapelogout"
        android:layout_alignParentBottom="true"
        android:id="@+id/Text_review"
        android:text="Write a Review"
        android:fontFamily="@font/mulibold"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/Progress_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>